<% layout('layouts/boilerplate') %>

<%- include('../partials/navbar.ejs') %>
<%- include('../partials/flash.ejs') %>

<div class="row">
  <div class="col-lg-6 mt-3">
    <!-- displaying flash -->

    <div class="card shadow mx-auto " style="width: 18rem;">
      <img src="<%=foundProduct.img%>" class="card-img-top" alt="...">
      <div class="card-body">
        <h3 class="card-title"><%=foundProduct.name%></h3>
        <h5 class="card-title"><%=foundProduct.price%></h5>
        <p class="card-text"><%=foundProduct.desc%></p>
        <!-- <a href="/products" class="btn btn-sm btn-light">Home</a> -->
        <a href="#" class="btn btn-sm btn-secondary">Add to cart</a>
        <a href="#" class="btn btn-sm btn-success">Buy Product</a>
        <a href="/products/<%=foundProduct._id%>/edit" class="btn btn-sm btn-warning">Edit</a>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <h1 class='display-5'>Leave a Reviews</h1>
    <form action="/products/<%=foundProduct._id%>/review" method="POST">
      <div class="mb-3">
        <fieldset class="starability-basic">
          <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="rating" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="rating" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="rating" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="rating" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="rating" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3">
        <label class="form-label" for="comment"></label>
        <textarea class="form-control" type="text" name="comment" id="comment"></textarea>
      </div>
      <button class="btn btn-sm btn-success">Add Review</button>
    </form>

    <div class="my-3">
      <% for(let review of foundProduct.reviews){ %>
      <div class="card mt-3">
        <!-- <div class="card-header">Rating: <%= review.rating %></div> -->

        <p class="card-title mx-3">
          <% if( review.createdAt) { %>
          <%= review.createdAt.toDateString()%>
          <% }%>
        </p>

        <p class="starability-result" data-rating="<%= review.rating %>">
          Rated:<%= review.rating %> stars
        </p>

        <div class="card-body">
          <p class="card-text"><%= review.comment%></p>
          <a href="#" class="btn btn-primary">Delete</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>