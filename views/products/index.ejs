<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar.ejs') %>
<div class="row">
  <% for(let item of products){  %>
  <div class="col-lg-4 mt-3">
    <div class="card shadow mx-auto " style="width: 18rem;">
      <img src="<%=item.img%>" class="card-img-top" alt="...">
      <div class="card-body">
        <h3 class="card-title"><%=item.name%></h5>
        <h6 class="card-title"><%=item.price%></h5>
        <p class="card-text"><%=item.desc%></p>
        <a href="/products/<%=item._id%>" class="btn btn-sm btn-info">View</a>

         <!-- to Delete -->
        <form action="/products/<%=item._id%>?_method=DELETE" method="POST" class=" d-inline-block">
            <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
  <% } %>
</div>